<h1>Editar Filme</h1>

<%= form_with(model: @movie, local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :release_year %>
  <%= form.number_field :release_year %>

  <%= form.label :synopsis %>
  <%= form.text_area :synopsis %>

  <%= form.label :country %>
  <%= form.text_field :country %>

  <%= form.label :duration %>
  <%= form.number_field :duration %>

  <%= form.label :director_id, "Diretor" %>
  <%= form.collection_select :director_id, Director.all, :id, :name %>

  <%= form.label :genre_id, "GÃªnero" %>
  <%= form.collection_select :genre_id, Genre.all, :id, :name %>

  <%= form.submit %>
<% end %>